<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_order_tag_v17.TagButton">
        <div class="control-button custom-tag-btn d-flex align-items-center p-2">
            <div class="tag-icon-box me-2">
                <i class="fa fa-tags text-primary" role="img"/>
            </div>
            <div class="tag-content d-flex flex-column flex-grow-1">
                <span class="tag-label text-muted mb-1">ORDER TAG</span>
                <select name="tags" id="tags_select" class="tag-select-styled" t-on-change="onTagChange" t-on-click.stop="">
                    <option value="">None</option>
                    <t t-foreach="state.tags" t-as="tag" t-key="tag.id">
                        <option t-att-value="tag.id">
                            <t t-esc="tag.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </div>
    </t>
</templates>